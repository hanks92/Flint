{% extends 'base.html.twig' %}

{% block title %}Créer une Flashcard{% endblock %}

{% block body %}
    <div class="flex flex-col items-center justify-center text-center min-h-screen py-10">
        <h1 class="text-3xl font-bold mb-8 text-gray-800">
            Créer une Nouvelle Flashcard pour <span class="text-blue-600">{{ deck.title }}</span>
        </h1>

        <div class="w-full max-w-lg p-6 bg-white shadow-lg rounded-lg border border-gray-200">
            {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_row(form.question, {
                        'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-2' },
                        'attr': { 'class': 'block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500' }
                    }) }}
                </div>

                <div class="mb-4">
                    {{ form_row(form.answer, {
                        'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-2' },
                        'attr': { 'class': 'block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500' }
                    }) }}
                </div>

                <button type="submit" class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-800">
                    Créer la Flashcard
                </button>
            {{ form_end(form) }}

            <div class="mt-6">
                <a href="{{ path('deck_show', { 'id': deck.id }) }}" 
                    class="w-full inline-block text-center text-white bg-gray-600 hover:bg-gray-700 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-500 dark:hover:bg-gray-600 dark:focus:ring-gray-800">
                    Retourner au Deck
                </a>
            </div>
        </div>
    </div>
{% endblock %}
