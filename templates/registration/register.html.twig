{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <!-- Ajuster la marge supérieure pour l'alignement -->
    <h1 class="text-2xl font-bold text-center mb-6 mt-10 text-gray-800 dark:text-white">Créer un compte</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'max-w-md mx-auto bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md'}}) }}

        <div class="mb-5">
            {{ form_label(registrationForm.email, "Email", {'label_attr': {'class': 'block text-sm font-medium text-gray-900 dark:text-white'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="mb-5">
            {{ form_label(registrationForm.username, "Nom d'utilisateur", {'label_attr': {'class': 'block text-sm font-medium text-gray-900 dark:text-white'}}) }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white'}}) }}
            {{ form_errors(registrationForm.username) }}
        </div>

        <div class="mb-5">
            <label for="profileImage" class="block text-sm font-medium text-gray-900 dark:text-white">Choisissez un avatar</label>
            <div class="grid grid-cols-4 gap-4 mt-2">
                {% for choice in registrationForm.profileImage %}
                    <label class="cursor-pointer">
                        {{ form_widget(choice) }}
                        <img src="{{ asset(choice.vars.value) }}" alt="Avatar" class="w-16 h-16 rounded-full border border-gray-300">
                    </label>
                {% endfor %}
            </div>
            {{ form_errors(registrationForm.profileImage) }}
        </div>

        <div class="mb-5">
            {{ form_label(registrationForm.plainPassword, "Mot de passe", {'label_attr': {'class': 'block text-sm font-medium text-gray-900 dark:text-white'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <button type="submit" class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-700 dark:hover:bg-blue-800 dark:focus:ring-blue-900">
            Créer un compte
        </button>

    {{ form_end(registrationForm) }}
{% endblock %}
