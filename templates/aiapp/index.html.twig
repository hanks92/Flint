{% extends 'base.html.twig' %}

{% block title %} Génération de Flashcards {% endblock %}

{% block body %}
    <div class="container mx-auto mt-10 p-6 bg-white shadow-md rounded-md">
        <h1 class="text-2xl font-bold mb-4 text-center">Créer un paquet de flashcards avec l'IA</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div class="mb-4">
                {{ form_label(form.subject, 'Sujet', {'label_attr': {'class': 'block font-medium text-gray-700'}}) }}
                {{ form_widget(form.subject, {'attr': {'class': 'w-full px-4 py-2 border rounded-md'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.context, 'Contexte/Domaine', {'label_attr': {'class': 'block font-medium text-gray-700'}}) }}
                {{ form_widget(form.context, {'attr': {'class': 'w-full px-4 py-2 border rounded-md'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.documents, 'Uploader des documents', {'label_attr': {'class': 'block font-medium text-gray-700'}}) }}
                {{ form_widget(form.documents, {'attr': {'class': 'w-full border rounded-md p-2'}}) }}
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition">
                Générer le paquet de flashcards
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
