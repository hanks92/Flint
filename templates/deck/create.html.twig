{% extends 'layouts/authenticated.html.twig' %}

{% block title %}Create a Deck{% endblock %}

{% block body %}
    <div style="margin-top: 4rem; display: flex; flex-direction: column; align-items: center; text-align: center; min-height: 80vh;">

        <h1 class="text-5xl font-extrabold text-gray-900 dark:text-white leading-tight mb-6">
            Create <span style="color: #2E5077;"> your deck</span>
        </h1>

        <div style="width: 100%; max-width: 600px; padding: 2rem; background-color: #f9f9f9; border: 1px solid #ddd; border-radius: 0.75rem; box-shadow: 0 4px 8px rgba(0,0,0,0.05);">
            {{ form_start(form) }}

                <div style="margin-bottom: 1.5rem; text-align: left;">
                    {{ form_label(form.title, 'Deck Title', { 'label_attr': { 'style': 'font-weight: bold; font-size: 1.25rem; display: block; margin-bottom: 0.5rem;' } }) }}
                    {{ form_widget(form.title, { 'attr': { 'style': 'width: 100%; padding: 0.75rem; font-size: 1rem; border-radius: 0.5rem; border: 1px solid #ccc;' } }) }}
                    {{ form_errors(form.title) }}
                </div>

                <div style="text-align: center;">
                    <button type="submit"
                        style="background-color: #4DA1A9; color: white; border: none; padding: 1rem 2rem; border-radius: 0.75rem; font-size: 1.25rem; cursor: pointer;">
                        Create Deck
                    </button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
