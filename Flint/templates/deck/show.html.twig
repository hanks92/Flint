{% extends 'layouts/authenticated.html.twig' %}

{% block title %}{{ deck.title }}{% endblock %}

{% block body %}
<div style="margin-top: 4rem; display: flex; flex-direction: column; align-items: center; text-align: center; min-height: 80vh;">

    <h1 class="text-5xl font-extrabold text-gray-900 dark:text-white leading-tight mb-6">
        Manage your deck: <span style="color: #2E5077;">{{ deck.title }}</span>
    </h1>

    <div style="display: flex; flex-direction: column; gap: 1rem; margin-top: 1rem;">
        <a href="{{ path('app_review_start', { 'deckId': deck.id }) }}" 
           style="background-color: #2E5077; color: white; border: none; padding: 1rem 2rem; border-radius: 0.75rem; font-size: 1.1rem; text-decoration: none; cursor: pointer;">
            Start Review
        </a>

        <a href="{{ path('flashcard_create', { id: deck.id }) }}" 
           style="background-color: #4DA1A9; color: white; border: none; padding: 1rem 2rem; border-radius: 0.75rem; font-size: 1.1rem; text-decoration: none; cursor: pointer;">
            Create Flashcard
        </a>

        <a href="{{ path('flashcard_list', { id: deck.id }) }}" 
           style="background-color: #79D7BE; color: white; border: none; padding: 1rem 2rem; border-radius: 0.75rem; font-size: 1.1rem; text-decoration: none; cursor: pointer;">
            View All Flashcards
        </a>
    </div>
</div>
{% endblock %}
