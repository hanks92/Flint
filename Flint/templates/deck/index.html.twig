{% extends 'layouts/authenticated.html.twig' %}

{% block title %}My Decks{% endblock %}

{% block body %}
    <div style="margin-top: 4rem; display: flex; flex-direction: column; align-items: center; text-align: center; min-height: 80vh;">

        <h1 class="text-5xl font-extrabold text-gray-900 dark:text-white leading-tight mb-6">
            My <span style="color: #2E5077;">decks</span>
        </h1>

        <!-- Top action buttons -->
        <div style="margin: 2rem 0;">
            <a href="{{ path('deck_create') }}"
               class="ud-main-btn me-3 mb-3"
               style="background-color: #4DA1A9; color: white; border: none; padding: 1rem 2rem; border-radius: 0.75rem; font-size: 1.25rem;">
                Create a deck
            </a>

            <a href="{{ path('ai_form') }}"
               class="ud-main-btn me-3 mb-3"
               style="background-color: #79D7BE; color: white; border: none; padding: 1rem 2rem; border-radius: 0.75rem; font-size: 1.25rem;">
                Create a deck with AI
            </a>
        </div>

        <!-- Separator -->
        <hr style="width: 60%; border: none; border-top: 3px solid #d0d0d0; margin: 1.5rem 0;" />

        <!-- Decks list -->
        <ul style="list-style: none; padding: 0; width: 100%; max-width: 600px;">
            {% for deck in decks %}
                <li style="margin: 1rem 0;">
                    <a href="{{ path('deck_show', { id: deck.id }) }}"
                       class="ud-main-btn ud-white-btn"
                       style="display: block; width: 100%; text-decoration: none;">
                        {{ deck.title }}
                    </a>
                </li>
            {% else %}
                <li style="font-size: 1.25rem; color: #888;">No decks found.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
